// Presentation Section
.content.content-section#presentation
	.section-container
		.section-inner
			h2.section-title My Presentation
			.section-content
				.presentation-intro
					p.intro-text Here is my professional marketing presentation, showcasing my expertise and project experience in the field of digital marketing.
				
				.canva-embed-container
					.embed-toolbar
						.toolbar-left
							span.status-indicator
							span.embed-title Canva Presentation
						.toolbar-right
							button.copy-btn(onclick="copyPresentationLink()") Copy Link
							button.open-btn(onclick="openCanvaPresentation()") Open in New Window
					
					.embed-wrapper#canvaEmbedWrapper
						.loading-skeleton#loadingSkeleton
							.skeleton-content
								.skeleton-line
								.skeleton-line.short
								.skeleton-line
								.skeleton-line.medium
						
						.error-state#errorState(style="display: none;")
							.error-content
								h4 😔 Presentation Cannot Be Embedded
								p Due to cross-origin security restrictions, some Canva content may not be directly embedded.
								p Please click the button below to view the complete presentation in a new window:
								button.view-btn(onclick="openCanvaPresentation()") 🔗 View My Presentation
						
						.embed-preview#embedPreview(style="display: none;")
							.preview-content
								.preview-header
									h3 📊 My Marketing Portfolio Showcase
									p Professional Marketing Strategy & Digital Transformation Case Studies
								.preview-features
									.feature-item
										span.feature-icon 🎯
										span.feature-text Social Media Marketing Strategy
									.feature-item
										span.feature-icon 📈
										span.feature-text Data-Driven Growth Solutions
									.feature-item
										span.feature-icon 🚀
										span.feature-text Digital Transformation Practice
									.feature-item
										span.feature-icon 💡
										span.feature-text Innovative Marketing Solutions
								.preview-action
									button.preview-btn(onclick="openCanvaPresentation()") View Complete Presentation
						
						iframe#canvaIframe(
							src=""
							title="Sienna's Marketing Presentation"
							loading="lazy"
							allowfullscreen
							style="display: none;"
						)

